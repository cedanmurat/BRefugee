<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundgradient"
    tools:context="org.beyondrefuge.www.PreferenceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
<ImageButton
    android:id="@+id/button_image_cencel"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_margin="8dp"
    android:src="@drawable/close"
    android:background="#0000"
    />
        <TextView
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:paddingRight="8dp"
            android:layout_margin="8dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="Select the catagory that you feel the most passionate about"/>
   <Button
       android:id="@+id/button_done"
       android:layout_width="70dp"
       android:layout_height="70dp"
       android:text="Done"
       android:textColor="#ffff"
       android:layout_alignParentRight="true"
       android:background="#0000"

       />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffff"/>
    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/tag_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="10dp"
        app:container_enable_drag="true"
        app:container_background_color="#579efa"
        app:horizontal_interval="10dp"
        app:vertical_interval="10dp"
        app:tag_clickable="true"
        app:tag_text_color="#ffffff"
        app:tag_theme="none" />




</LinearLayout>
